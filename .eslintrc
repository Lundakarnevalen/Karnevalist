{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true,
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": [
    "react",
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb",
    "prettier",
    "prettier/react",
    "prettier/standard",
  ],
  "rules": {
    // more rules
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    linebreak-style: 0,
    import/prefer-default-export: 0
  },

  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["assets/images"]
      }
    }
  }
}
